<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        

        <div>

          <ul>
            <% results.forEach(function(quotes) { %>
                <form method="POST" action="quotes/ranking">
                    <button name="quote_id" value="<%= quotes.id %>"><input type="hidden" name="rank" value="<%= quotes.ranking=parseInt(quotes.ranking) + 1 %>"></button><%= quotes.quote %>
                </form>
            <% }); %>
        </ul>
    

        </div>
            
            
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

   
</body>
</html>

