<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body>

    <header>
        <% include ../partials/header %>
        <style type="text/css">
        body, .btn {
            font-family: sans-serif;
            font-size: 14px;
        }
        </style>
    </header>

    <main>
        <div>
            <h2>Quotes</h2>
            <br>
            <div>

                
                <h5 id="runquote"></h5>

                
                <form method="POST" action="quotes/add">
                    <button class="btn btn-success" id="get-another-quote-button">New Quote</button>
                
                    <button class="btn btn-secondary" id="add-quote-button">Add to List</button>
               
                </form>
                <!-- Code here to grab quote and render on page -->

            </div>

            <% results.forEach(function(quotes) { %>
                
                <form method="POST" action="quotes/ranking">
                    <button class="btn btn-primary btn-xs" name="rank" value="<%= quotes.ranking=parseInt(quotes.ranking) + 1 %>"><input type="hidden" name="quote_id" value="<%= quotes.id %>"><i class="fa fa-thumbs-up"></i> <%= quotes.ranking %></button>
                    
                    <button class="btn btn-danger btn-xs" name="favorite_quote_id" value="<%= quotes.id %>"><i class="fa fa-heart"></i></button> <%= quotes.quote %><br>
                </form>
                
            <% }); %>

            <form method="POST" action="quotes/ranking">
                <p>Add Quote: <input type="text" name="quote" placeholder="add your favorite quotes here">
                <!-- For future work - Add Mood: <input type="text" name="mood" placeholder="add your mood here"> -->
                    Select a Mood: <% moods.forEach(function(m) { %>
                        <input type="radio" name="mood_id" value="<%= m.id %>" > <%= m.mood %> </button>
                        
                    <% }); %>
                <button class="btn btn-secondary btn-sm">Submit</button> </p>
            </form>
        </div>          
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    <% include ../partials/script %>

    <script src="/javascript/quotesJax.js"></script>
</body>
</html>

